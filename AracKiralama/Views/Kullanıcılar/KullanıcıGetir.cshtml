@model AracKiralama.Models.Sınıflar.Kullanıcı

@{
    ViewBag.Title = "KullanıcıGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcı Güncelleme Sayfasına Hoşgeldiniz!</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Kullanıcılar/Index">Kullanıcılar</a></li>
                    <li class="breadcrumb-item active">Kullanıcı Güncelle Sayfası</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kullanıcı Güncelle</h3>
    </div>

    @using (Html.BeginForm("KullanıcıGüncelle", "Kullanıcılar", FormMethod.Post))
    {
        <div class="card-body">
            @Html.LabelFor(x => x.Ad)
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @readonly = "readonly" })
            <br>

            @Html.LabelFor(x => x.Soyad)
            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", @readonly = "readonly" })
            <br>

            @Html.LabelFor(x => x.Sehir)
            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control", @readonly = "readonly" })
            <br>

            @Html.LabelFor(x => x.Mail)
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = "readonly" })

            <br>

            @Html.LabelFor(x => x.Password)
            <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" readonly>

            <br>

            @Html.LabelFor(x => x.Image)
            @Html.TextBoxFor(x => x.Image, new { @class = "form-control", @readonly = "readonly" })

            <br>
            @Html.LabelFor(x => x.Status)
            <select class="form-control" name="Status">
                <option>True</option>
                <option>False</option>

            </select>
            @Html.LabelFor(x => x.Yetki)
            <select class="form-control" name="Yetki">
                <option>A</option>
                <option>U</option>

            </select>
            <br>

            @Html.LabelFor(x => x.Created_at)
            @Html.TextBoxFor(x => x.Created_at, new { @class = "form-control", @readonly = "readonly" })

            <br>
            @Html.HiddenFor(x => x.KullanıcıId)

            <button class="btn btn-warning">Güncelle</button>
            <br>
        </div>
        <!-- /.card-body -->


    }
</div>


