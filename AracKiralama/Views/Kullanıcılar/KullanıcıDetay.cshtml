
@using AracKiralama.Models.Sınıflar
@model List<Kullanıcı>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.user Profil Sayfasına Hoşgeldiniz!</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Kullanıcılar/Index">Kullanıcılar</a></li>
                    <li class="breadcrumb-item active">Kullanıcılar Detay Sayfası</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">

    <div class="card-body">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.user 'nın Profili</h3>
            </div>
            <div class="card-body">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4" style="width:auto">
                    <div class="row">
                        <div class="col-sm-12 col-md-6"></div>
                        <div class="col-sm-12 col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example2_info">

                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            
                                            <div class="center"><img src="@user.Image" height="350px" style="margin-left:350px;"></div>
                                            <br />
                                            <br />
                                        </tr>

                                        <tr role="row" class="odd">
                                            <th>Kullanıcı ID : </th>
                                            <td>@user.KullanıcıId</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Kullanıcı Adı : </th>
                                            <td>@user.Ad</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Kullanıcı Soyad : </th>
                                            <td>@user.Soyad</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Kullanıcı Şehir : </th>
                                            <td>@user.Sehir</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Status</th>
                                            <td>@user.Status</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Created_at</th>
                                            <td>@user.Created_at</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Updated_at</th>
                                            <td>@user.Updated_at</td>

                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Yorumları</th>
                                            <td><a href="/Kullanıcılar/KullanıcıYorumları/@user.KullanıcıId" class="btn btn-group" style="background-color:greenyellow  ">Yorumlara Git </a></td>


                                        </tr>
                                        <tr role="row" class="odd">
                                            <th>Kiralamaları</th>
                                            <td><a href="/Kullanıcılar/KullanıcıKiralamalar/@user.KullanıcıId" class="btn btn-group" style="background-color:cornflowerblue">Kiralamalara Git </a></td>


                                        </tr>


                                    }


                                </tbody>

                            </table>


                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>


