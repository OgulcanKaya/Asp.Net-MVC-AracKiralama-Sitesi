@model AracKiralama.Models.Sınıflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Fatura Kalem Ekleme Sayfasına Hoşgeldiniz!</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="Fatura/Index">Faturalar</a></li>
                    <li class="breadcrumb-item active">Fatura Ekleme Sayfası</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Fatura Kalem Ekle</h3>
    </div>

    <form role="form" method="post">
        <div class="card-body">

            @Html.LabelFor(x => x.Detail)
            @Html.TextBoxFor(x => x.Detail, new { @class = "form-control" })
            <br>

            @Html.LabelFor(x => x.Gün)
            @Html.TextBoxFor(x => x.Gün, new { @class = "form-control" })

            <br>

            @Html.LabelFor(x => x.Tutar)
            @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control"})

            <br>

            @Html.LabelFor(x => x.Faturaid)
            @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })

           
            <br>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </form>
</div>



