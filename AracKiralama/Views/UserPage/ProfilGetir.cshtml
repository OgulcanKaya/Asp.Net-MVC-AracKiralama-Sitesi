@model AracKiralama.Models.Sınıflar.Kullanıcı



<script type="text/javascript">
    function ShowHidePass(objChk) {
        if (objChk.checked)
            password.type = "text"
        else
            password.type = "password"
    }
</script>

@using (Html.BeginForm("ProfilGüncelle", "UserPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Soyad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group row">

        <label class="col-sm-2 col-form-label">Image</label>

        <div class="col-sm-10">

            <input type="file" name="Image" class="form-control-file" />

        </div>

    </div>
    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            <input type="checkbox" onclick="ShowHidePass(this)" />Göster
        </div>

    </div>



    @Html.HiddenFor(x => x.KullanıcıId)

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Submit</button>

        </div>

    </div>


}
