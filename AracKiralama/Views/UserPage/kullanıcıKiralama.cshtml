@using AracKiralama.Models.Sınıflar
@model List<KiralamaHareket>


<div class="button" style="width:170px;">
    <a href="/UserPage/KullanıcıKiralamalarListe" class="btn btn-block btn-success" style="background-color:cornflowerblue" target="_blank">Kiralamaları Dönüştür </a>
</div>
<br />
<table id="example2" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example2_info">
    <thead>
        <tr role="row">
            <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="descending">Id</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Araba</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Araba Görsel</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Alış Tarih</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Teslim Tarih</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Gün Sayısı</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Fiyat</th>
            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Toplam</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var kira in Model)
        {
            <tr role="row" class="odd">
                <td>@kira.KiralamaId</td>
                <td>
                    <a href="/Home/AraçDetay/@kira.Arabaid">
                        @kira.Arabalar.Title
                    </a>
                </td>

                <td><img src="@kira.Arabalar.Image" style="width:80px; height:50px;" /></td>
                <td>@kira.Tarih.ToString("dd.MM.yyy")</td>
                <td>@kira.TeslimTarih.ToString("dd.MM.yyy")</td>
                <td>@kira.GünSayısı</td>
                <td>@kira.Fiyat ₺</td>
                <td>@kira.ToplamTutar</td>

               

            </tr>

        }


    </tbody>

</table>


