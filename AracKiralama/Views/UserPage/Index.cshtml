@model AracKiralama.Models.Sınıflar.HomePageDatas


@foreach (var set in Model.Settings)
{
    ViewBag.Title = set.Title;
    ViewBag.Description = set.Description;
    ViewBag.keywords = set.Keywords;
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



<div class="page-heading header-text" style="background-image: url('/Content/paris.jpg'); ">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (var user in Model.Kullanıcıs)
                {
                    <h1>@user.Ad @user.Soyad Profile</h1>
                }
            </div>
        </div>
    </div>
</div>
<br />
<body class="hold-transition sidebar-mini">

    <div class="wrapper">




        <!-- Main content -->

        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <div class="col-md-3">

                        <!-- Profile Image -->

                        <div class="card card-primary card-outline">
                            @foreach (var user in Model.Kullanıcıs)
                            {


                                <div class="card-body box-profile">

                                    <div class="text-center">

                                        <img class="profile-user-img img-fluid img-circle"
                                             src="@user.Image"
                                             alt="User profile picture">

                                    </div>

                                    <h3 class="profile-username text-center">@user.Ad @user.Soyad</h3>

                                    <p class="text-muted text-center">@user.Sehir</p>

                                    <ul class="list-group list-group-unbordered mb-3">

                                        <li class="list-group-item">

                                            <b>Kiralamalarım</b> <a class="float-right">@ViewBag.toplamKiralama</a>

                                        </li>

                                        <li class="list-group-item">

                                            <b>Yorumlarım</b> <a class="float-right">@ViewBag.toplamYorum</a>
                                           

                                        </li>

                                        <li class="list-group-item">
                                            <b>Toplam Harcamalarım</b> <a class="float-right" style="color:cornflowerblue">@ViewBag.toplamHarcama ₺</a>
                                        </li>

                                        <li class="list-group-item">

                                            <a href="/LoginRegister/SignOut" class="float-left"> <b>Sign Out</b></a>

                                        </li>

                                    </ul>

                                </div>
                            }

                            <!-- /.card-body -->

                        </div>

                        <!-- /.card -->
                        <!-- About Me Box -->

                        @foreach (var user in Model.Kullanıcıs)
                        {
                            <div class="card card-primary">

                                <div class="card-header">

                                    <h3 class="card-title">Bilgilerim</h3>

                                </div>

                                <!-- /.card-header -->

                                <div class="card-body">

                                    <strong><i class="fa fa-mail-forward"></i> Mail</strong>

                                    <p class="text-muted">

                                        @user.Mail

                                    </p>

                                    <hr>

                                    <strong><i class="fa fa-university"></i> Şehir</strong>

                                    <p class="text-muted">@user.Sehir</p>

                                    <hr>

                                    <strong><i class="fa fa-calendar"></i> Katılma Tarihi</strong>

                                    <p class="text-muted">

                                        <span class="tag tag-danger">@user.Created_at.ToString("dd.MM.yyy")</span>


                                    </p>

                                    <hr>

                                    <strong><i class="fa fa-calendar"></i> Profilil Güncelleme Tarihi</strong>

                                    <p class="text-muted">@user.Updated_at.ToString("dd.MM.yyy")</p>
                                    <hr>

                                    <strong><i class="fa fa-bolt"></i> Üyelik Durumu </strong>


                                    @if (@user.Status == true)
                                    {
                                        <p class="text-muted">
                                            Aktif
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="text-muted">
                                            Pasif
                                        </p>

                                    }


                                </div>

                                <!-- /.card-body -->

                            </div>
                        }

                        <!-- /.card -->

                    </div>

                    <!-- /.col -->

                    <div class="col-md-9">

                        <div class="card">

                            <div class="card-header p-2">

                                <ul class="nav nav-pills">

                                    <li class="nav-item"><a class="nav-link active" href="#kiralamalar" data-toggle="tab">Kiralamalarım</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#yorumlar" data-toggle="tab">Yorumlarım</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Profil Güncelle</a></li>

                                </ul>

                            </div><!-- /.card-header -->

                            <div class="card-body">

                                <div class="tab-content">

                                    <div class="active tab-pane" id="kiralamalar">

                                        @Html.Action("kullanıcıKiralama", "UserPage")
                               

                                    </div>


                                    <div class="tab-pane" id="yorumlar">


                                        @Html.Action("kullanıcıYorum", "UserPage")

                                    </div>
                                    <div class="tab-pane" id="settings">

                                        @Html.Action("ProfilGetir", "UserPage")

                                    </div>

                                    <!-- /.tab-pane -->

                                </div>

                                <!-- /.tab-content -->

                            </div><!-- /.card-body -->

                        </div>

                        <!-- /.nav-tabs-custom -->

                    </div>

                    <!-- /.col -->

                </div>

                <!-- /.row -->

            </div><!-- /.container-fluid -->

        </section>

        <!-- /.content -->

    </div>

</body>

